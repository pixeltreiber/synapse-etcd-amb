{
  "haproxy": {
    "do_writes": true,
    "do_reloads": true,
    "reload_command": "/usr/bin/supervisorctl restart haproxy",
    "config_file_path": "/etc/haproxy/haproxy.cfg",
    "socket_file_path": "/var/run/haproxy.sock",
    "global": [
      "daemon",
      "user    haproxy",
      "group   haproxy",
      "maxconn 4096",
      "log     127.0.0.1 local2 notice",
      "stats   socket /var/run/haproxy.sock"
    ],
    "defaults": [
      "log      global",
      "balance  roundrobin",
      "timeout connect 5s",
      "timeout client 100s",
      "timeout server 100s"
    ],
    "listen stats :1936": [
      "mode http",
      "stats enable",
      "stats hide-version",
      "stats realm Haproxy/\ Statistics",
      "stats uri /",
      "stats auth Username:Password"
    ],
     "bind_address: "0.0.0.0"
  },
  "services": {
    "%%SYNAPSE_APP%%": {
      "discovery": {
        "method": "etcd",
        "path":  "/nerve/services/%%SYNAPSE_APP%%",
        "host": "%%ETCD_HOST%%",
        "port": %%ETCD_PORT%%
      },
      "haproxy": {
        "port": %%SYNAPSE_PORT%%,
        "server_options": "check inter 2000 rise 3 fall 2",
        "frontend": [
          "mode tcp",
        ],
        "backend": [
          "mode tcp",
        ],
      }
    }
  }
}
